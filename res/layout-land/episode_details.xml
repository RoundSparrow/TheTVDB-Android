<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue2">
    
    <ProgressBar 
        android:id="@+id/progress_episode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
    

	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	
	    <LinearLayout
	        android:id="@+id/series_overview_linear_layout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">

	        <include layout="@layout/episode_details_title" />
	        			        
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingTop="0dp"
		        android:gravity="top|fill"
		        android:orientation="horizontal">
				    
		        <ImageButton
				    android:id="@+id/episode_thumb"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_horizontal"
				    android:adjustViewBounds="true"
				    android:background="#FFFFFF"
				    android:padding="1dip"
				    android:layout_margin="12dip"
				    android:contentDescription="@string/banner_alt_text"
				    android:visibility="gone" />
		        
				<TextView
				    android:id="@+id/overview"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="5dip"
				    android:textSize="18sp"
				    android:visibility="gone" />
			</LinearLayout>
						
			<TextView
			    android:id="@+id/director_header"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:textSize="24sp"
			    android:textColor="@color/header_white"
			    android:visibility="gone"
			    android:text="@string/director" />
			
			<TextView
			    android:id="@+id/director"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="5dip"
			    android:textSize="18sp"
			    android:visibility="gone" />
	        
	        <TextView
			    android:id="@+id/writer_header"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:textSize="24sp"
			    android:textColor="@color/header_white"
			    android:visibility="gone"
			    android:text="@string/writer" />
			
			<TextView
			    android:id="@+id/writer"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="5dip"
			    android:textSize="18sp"
			    android:visibility="gone" />
			
			<TextView
			    android:id="@+id/guest_stars_header"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:textSize="24sp"
			    android:textColor="@color/header_white"
			    android:visibility="gone"
			    android:text="@string/guest_stars" />
			
			<TextView
			    android:id="@+id/guest_stars"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="5dip"
			    android:textSize="18sp"
			    android:visibility="gone" />
			
			<TextView
			    android:id="@+id/imdb_link"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="5dip"
			    android:textSize="18sp"
			    android:visibility="gone" />
			        
	        </LinearLayout>
	</ScrollView>
</FrameLayout>

